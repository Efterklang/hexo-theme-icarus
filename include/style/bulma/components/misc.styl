.section
  padding 3rem 1.5rem
  flex-grow: 1;

.container
  flex-grow 1
  margin 0 auto
  position relative
  width auto

.main-content
  -webkit-justify-content center;
  justify-content center;
  flex-grow 1
  margin 0 auto
  position relative
  max-width: 900px;

/* ---------------------------------
 *            Page Footer
 * --------------------------------- */
$footer-padding ?= 3rem 1.5rem 6rem
.footer
  padding $footer-padding
  position relative
  color inherit
  .container
    max-width 1080px
  .footer-grid
    display grid
    grid-template-columns repeat(auto-fit, minmax(180px, 1fr))
    grid-gap 1.5rem
    align-items start
  .footer-column
    display flex
    flex-direction column
    gap .5rem
  .footer-title
    font-weight bolder
    font-size 1.1rem
    color inherit
    margin-bottom .25rem
  .footer-heading
    color: var(--text)
    font-weight bolder
    font-size 1.1rem
    color inherit
    opacity .8
    margin-bottom .25rem
  .footer-meta
    font-size: 0.75rem
    opacity .7
    line-height 1.6
  .footer-links
    display flex
    flex-wrap wrap
    gap .5rem 1rem
    align-items center
  .footer-link
    display inline-flex
    align-items center
    gap .4rem
    color inherit
    opacity .85
    text-decoration none
    &:hover
      opacity 1
      text-decoration underline
  iconify-icon
    font-size 1.2rem
  .footer-archive-list
    display flex
    flex-wrap wrap
    gap .35rem .75rem
    margin 0
    padding 0
  .footer-archive-pill
    display inline-flex
    align-items center
    padding 0

  @media (max-width: 768px)
    .footer-grid
      grid-template-columns 1fr

// button
$button-border-width ?= $control-border-width
$button-padding-vertical ?= "calc(0.5em - %s)" % $button-border-width
$button-padding-horizontal ?= 1em

.button
  @extend $control
  @extend $unselectable
  cursor pointer
  justify-content center
  padding: $button-padding-vertical $button-padding-horizontal
  text-align center
  white-space nowrap

// hide scroll-bar
::-webkit-scrollbar
    display: none
