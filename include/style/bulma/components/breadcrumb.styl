$breadcrumb-item-padding-vertical ?= 0
$breadcrumb-item-padding-horizontal ?= 0.1em

// Typewriter animation keyframes
@keyframes typewriter
  from
    max-width 0
    overflow hidden
  to
    max-width 100%

// used in tag page and categories page
.breadcrumb
  @extend $block
  @extend $unselectable
  white-space nowrap
  font-family: Maple Mono NF CN
  a
    align-items center
    display flex
    justify-content center
    padding $breadcrumb-item-padding-vertical $breadcrumb-item-padding-horizontal
  li
    align-items center
    display flex
    &:first-child a
      padding-left 0
    &.is-active
      a
        cursor default
        pointer-events none
    & + li::before
      content "\0002f"
    // Typewriter effect for breadcrumb items
    &:nth-child(n+2)
      animation typewriter 3s ease-in-out backwards
      &:nth-child(2)
        animation-delay 0s
      &:nth-child(3)
        animation-delay 1.5s
      &:nth-child(4)
        animation-delay 2s
      &:nth-child(5)
        animation-delay 3s
  ul,
  ol
    align-items flex-start
    display flex
    flex-wrap wrap
    justify-content flex-start
