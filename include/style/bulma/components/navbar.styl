$navbar-height ?= 4rem
$navbar-padding-vertical ?= 1rem
$navbar-padding-horizontal ?= 2rem
$navbar-z ?= 100
$navbar-item-img-max-height ?= 1.75rem
$navbar-bottom-box-shadow-size ?= 0 -2px 0 0
$navbar-breakpoint ?= $desktop

.navbar
  min-height $navbar-height
  position sticky
  top: 0
  left: 0
  right: 0
  transition: transform 0.3s ease-in-out
  z-index $navbar-z
  font-family: $family-morden
  & > .container
    align-items stretch
    display flex
    min-height $navbar-height
    width 100%

.navbar-main.navbar--hidden
  transform: translateY(-100%)

.navbar-brand,
  align-items stretch
  display flex
  flex-shrink 0
  padding: 0

.navbar-menu
  display none

.navbar-item,
.navbar-link
  align-items center
  display flex
  font-size: 1.1rem
  padding 0 0.4rem
  position relative
  svg
    width 15px

.navbar-item
  flex-grow 0
  flex-shrink 0

// Navbar main container styles
.navbar-main
  +touch()
    .navbar-menu
      box-shadow: 0 8px 16px rgba(10, 10, 10, 0.1)
      padding: 0.5rem 0
      &.is-active
        display: block
        position: absolute
        top: 100%
        left: 0
        width: 100%
      .navbar-item
        display: block
        padding: 0.5rem 1rem
        text-align: center;
      .navbar-end
          display: flex
          justify-content: center

.navbar-menu
  flex-grow 1
  flex-shrink 0
.navbar-start
  justify-content flex-start
  margin-right auto
.navbar-end
  justify-content flex-end
  margin-left auto
/* Navbar Burger */
.navbar-burger {
  color: var(--flamingo);

  &:hover {
    color: var(--flamingo);
  }
}

.navbar-burger {
  position: relative;
  width: 4rem;
  margin-left: auto;
}
.navbar-burger span {
  background-color: currentColor;
  height: 2px;
  left: calc(50% - 8px);
  position: absolute;
  transform-origin: center;
  transition-duration: 86ms;
  transition-property: background-color, opacity, transform;
  transition-timing-function: ease-out;
  width: 16px;
}
.navbar-burger span:nth-child(1) {
  top: calc(50% - 6px);
}
.navbar-burger span:nth-child(2) {
  top: calc(50% - 1px);
}
.navbar-burger span:nth-child(3) {
  top: calc(50% + 4px);
}
.navbar-burger.is-active span:nth-child(1) {
  transform: translateY(5px) rotate(45deg);
}
.navbar-burger.is-active span:nth-child(2) {
  opacity: 0;
}
.navbar-burger.is-active span:nth-child(3) {
  transform: translateY(-5px) rotate(-45deg);
}
