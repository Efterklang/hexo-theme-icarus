$card-content-padding ?= 1.25rem
$card-radius ?= 24px

[data-type="profile"], .footer, .widget
  font-family: $family-morden

.card
    max-width 100%
    position relative
    border-radius: $card-radius
    overflow: visible
    & + .card
        margin-top: 1.5rem;

.card-image
    display block
    position relative
    // border-radius: 24px 24px 0 0
    border-radius: $card-radius
    overflow: hidden;

    .cover-lqip, .fill
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;

    .cover-lqip
        z-index: 1;
        transition: opacity 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);

    .fill.loaded + .cover-lqip
        display: none

