$card-shadow ?= 0 0.5em 1em -0.125em rgba($scheme-invert, 0.1), 0 0px 0 1px rgba($scheme-invert, 0.02)
$card-content-padding ?= 1.25rem
$card-radius ?= 24px

.card
    box-shadow $card-shadow
    max-width 100%
    position relative
    border-radius: $card-radius
    overflow: visible
    &:hover
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    & + .card, & + .column-right-shadow
        margin-top: 1.5rem;

    // 媒体元素
    .media + .media
        border: none;
        margin-top: 0;
        padding-top: 1rem;

    // 响应式设计
    +mobile()
        margin: 0 0 1.5rem 0;
        .card-content,
        .card-footer
            padding: 1rem;

.card-image
    display block
    position relative
    border-radius: $card-radius
    overflow: hidden;

    .cover-lqip, .fill
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;

    .cover-lqip
        z-index: 1;
        transition: opacity 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);

    .fill.loaded + .cover-lqip
        display: none

.card-content
  padding $card-content-padding
  border-radius: 0;
