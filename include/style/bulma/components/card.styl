$card-shadow ?= 0 0.5em 1em -0.125em rgba($scheme-invert, 0.1), 0 0px 0 1px rgba($scheme-invert, 0.02)
$card-header-padding ?= 0.75rem 1rem
$card-header-shadow ?= 0 0.125em 0.25em rgba($scheme-invert, 0.1)
$card-header-weight ?= $weight-bold
$card-content-padding ?= 1.5rem
$card-footer-padding ?= 0.75rem
$card-media-margin ?= $block-spacing

.card
  box-shadow $card-shadow
  max-width 100%
  position relative

.card-header
  align-items stretch
  box-shadow $card-header-shadow
  display flex

.card-header-title
  align-items center
  display flex
  flex-grow 1
  font-weight $card-header-weight
  padding $card-header-padding
  &.is-centered
    justify-content center

.card-header-icon
  align-items center
  cursor pointer
  display flex
  justify-content center
  padding $card-header-padding

.card-image
  display block
  position relative

.card-content
  padding $card-content-padding

.card-footer
  align-items stretch
  display flex

.card-footer-item
  align-items center
  display flex
  flex-basis 0
  flex-grow 1
  flex-shrink 0
  justify-content center
  padding $card-footer-padding

// Combinations

.card
  .media:not(:last-child)
    margin-bottom $card-media-margin
