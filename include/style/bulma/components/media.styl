$media-border-color ?= rgba($border, 0.5)

.media
  align-items flex-start
  display flex
  text-align left
  .image
      width: 64px
      height: 64px

      img
          object-fit: cover
          width: 100%
          height: 100%
          border-radius: 5px
  .title
      font-size: 1em

.media-left
  margin-right 1rem
