.image
  display block
  position relative
  img
    display block
    height auto
    width 100%
  &.is-fullwidth
    width 100%
  &.is-7by3
    padding-top: 42.8%
    img
      bottom: 0
      left: 0
      position: absolute
      right: 0
      top: 0
  .fill
    object-fit: cover
    width: 100% !important
    height: 100% !important
