$content-heading-weight ?= $weight-semibold
$content-heading-line-height ?= 1.125
$content-pre-padding ?= 1.25em 1.5em

.content
  @extend $block
  overflow auto
  // Inline
  li + li
    margin-top 0.25em
  // Block
  p,
  dl,
  ol,
  ul,
  blockquote,
  pre
    &:not(:last-child)
      margin-bottom 1em
  h2
    font-size 1.75em
    margin-bottom 0.5714em
    &:not(:first-child)
      margin-top 1.1428em
  h3
    font-size 1.5em
    margin-bottom 0.6666em
  h4
    font-size 1.25em
    margin-bottom 0.8em
  h5
    font-size 1.125em
    margin-bottom 0.8888em
  h6
    font-size 1em
    margin-bottom 1em
  h2,h3,h4,h5,h6
    font-weight: bolder

  word-wrap: break-word
  font-size: 1.15rem
  font-family: $family-sans-serif

  img, video
    display block;
    margin 0 auto;
    margin-bottom: 1.5rem;
    border-radius 2px;
    &:hover
        cursor pointer

  code
    font-family: $family-monospace
    border-radius: 6px
    padding: 1px 6px

  ol
    list-style-position outside
    margin-left 2em
    margin-top 1em
  ul
    list-style disc outside
    margin-left 2em
    margin-top 1em
    ul
      list-style-type circle
      margin-top 0.5em
      ul
        list-style-type square
  dd
    margin-left 2em
  figure
    margin-left 2em
    margin-right 2em
    text-align center
    &:not(:first-child)
      margin-top 2em
    &:not(:last-child)
      margin-bottom 2em
    img
      display inline-block
    figcaption
      font-style italic
  pre
    overflow-touch()
    overflow-x auto
    font-size: .85em
    padding $content-pre-padding
    white-space pre
    word-wrap normal
  sup,
  sub
    font-size 75%

  abbr[title]
    text-decoration: underline dotted
    cursor: help
    position: relative
    // &:hover::after
    //   content: attr(title)
    //   position: absolute
    //   left: 50%
    //   transform: translateX(-50%)
    //   bottom: 100%
    //   margin-bottom: 5px
    //   padding: 5px 10px
    //   overflow: visible
    //   border-radius: 4px
    //   font-size: 0.9em
    //   word-wrap: break-word
    //   z-index: 10

  $link-icons = {
    "github": " ",
    "wikipedia": "󰖬 ",
    "youtube": " ",
    "apple": " ",
    "mozilla": "󰬔 ",
    "man7": " ",
    "/": " ",
    "vluv": " "
  }

  a[href*="github"], a[href*="wikipedia"], a[href*="youtube"],
  a[href*="apple"], a[href*="mozilla"], a[href*="man7"],
  a[href^="/"],a[href*="vluv"]
    &::before
      font-family: "Maple Mono NF CN"
      font-size: 1em
      padding-left: .5em
      color: var(--lavender)

  for $site, $icon in $link-icons
    if $site == "/"
      a[href^="/"]::before
        content: $icon
    else
      a[href*={unquote($site)}]::before
        content: $icon

.footnotes
  font-family serif
  font-size 0.9em

blockquote
  position: relative
  padding: 1.5rem 2rem 1.5rem 3rem
  margin: 1.5rem 0
  border-left: 4px solid
  border-radius: 0 8px 8px 0
  font-weight: bolder
  font-family: serif
  font-style: italic
  font-size: 1.05rem
  line-height: 1.6

  &:before
    content: '"'
    position: absolute
    left: 0.5rem
    top: 0.2rem
    font-size: 3rem
    font-weight: bold
    opacity: 0.3
    line-height: 1

ul.contains-task-list
  list-style-type: none

li.task-list-item
  display: flex
  align-items: center
  gap: 0.75rem
  font-size: 1rem

input.task-list-item-checkbox
  appearance: none;
  -webkit-appearance: none;
  width: 1.2rem;
  height: 1.2rem;
  border: 2px solid var(--surface1);
  border-radius: 0.375rem;
  position: relative;

input.task-list-item-checkbox:checked::before
  content: "✓";
  color: var(--base);
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 0.8rem;
  font-weight: bold;

.heading
  display block
  font-size 11px
  letter-spacing 1px
  margin-bottom 5px
  text-transform uppercase

.medium-zoom-overlay
    backdrop-filter blur(8px);
    -webkit-backdrop-filter blur(8px);
    z-index 150 !important;

.medium-zoom-image--opened
    z-index 151;
    position fixed;
