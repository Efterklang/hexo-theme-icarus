$tag-radius ?= 5px;
$tag-border-width ?= 1px;
$tag-font-family ?= monospace

.tags
  font-family: $tag-font-family;
  flex-wrap wrap
  justify-content flex-start
  padding: .5rem .5rem
  display: inline-flex;
  align-items: center;
  transition: all 0.3s ease;

  &:hover
      transform: translateY(-2px);

.tag
  padding: 0.5em 0.75em;
  transition: all 0.3s ease;
  border-style: solid;
  align-items center
  border-radius $tag-radius
  display inline-flex
  font-size 0.75rem
  height 2em
  line-height 1.5
  white-space nowrap

  &:first-child
      border-width: $tag-border-width 0 $tag-border-width $tag-border-width;
      border-radius: $tag-radius 0 0 $tag-radius;

      &::before
          content: '#';
          opacity: 0.7;
          margin-right: 0.25em;

  &:last-child
      border-width: $tag-border-width $tag-border-width $tag-border-width 0;
      border-radius: 0 $tag-radius $tag-radius 0;
