$tag-radius ?= 5px;
$tag-delete-margin ?= 1px
$tag-border-width ?= 1px;
$tag-font-family ?= "Maple Mono NF CN", monospace

.tag
    font-family: $tag-font-family;

.tags
  align-items center
  display flex
  flex-wrap wrap
  justify-content flex-start
  .tag
    margin-bottom 0.5rem
    &:not(:last-child)
      margin-right 0.5rem
  &:last-child
    margin-bottom -0.5rem
  &:not(:last-child)
    margin-bottom 1rem

  &.has-addons
    display: inline-flex;
    align-items: center;
    transition: all 0.3s ease;

    &:hover
        transform: translateY(-2px);

    .tag
        margin: 0;
        border-radius: 0;
        padding: 0.5em 0.75em;
        transition: all 0.3s ease;
        border-style: solid;

        &:first-child
            border-width: $tag-border-width 0 $tag-border-width $tag-border-width;
            border-radius: $tag-radius 0 0 $tag-radius;

            &::before
                content: '#';
                opacity: 0.7;
                margin-right: 0.25em;

        &:last-child
            border-width: $tag-border-width $tag-border-width $tag-border-width 0;
            border-radius: 0 $tag-radius $tag-radius 0;


.tag:not(body)
  align-items center
  border-radius $tag-radius
  display inline-flex
  font-size $size-small
  height 2em
  justify-content center
  line-height 1.5
  padding-left 0.75em
  padding-right 0.75em
  white-space nowrap
  // Sizes
  &.is-normal
    font-size $size-small
  &.is-medium
    font-size $size-normal
  &.is-large
    font-size $size-medium
  .icon
    &:first-child:not(:last-child)
      margin-left -0.375em
      margin-right 0.1875em
    &:last-child:not(:first-child)
      margin-left 0.1875em
      margin-right -0.375em
    &:first-child:last-child
      margin-left -0.375em
      margin-right -0.375em
  // Modifiers
  &.is-rounded
    border-radius $radius-rounded

a.tag
  &:hover
    text-decoration underline
