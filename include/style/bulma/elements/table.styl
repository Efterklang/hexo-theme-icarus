table
  width: 100%;
  border-collapse: separate;
  border-spacing: 0;
  margin: 1.5rem 0;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);

  td, th
    vertical-align top
    padding: 12px 16px;
    &:not([align])
      text-align left

  th
      font-weight: 600;
      border-bottom: 2px solid;
      position: relative;
      &:first-child
          border-top-left-radius: 8px;
      &:last-child
          border-top-right-radius: 8px;

  td
      border-bottom: 1px solid;
      transition: background-color 0.2s ease;

  tbody tr
      &:last-child td
          border-bottom: none;

          &:first-child
              border-bottom-left-radius: 8px;
          &:last-child
              border-bottom-right-radius: 8px;

// Overflow table
.table-overflow
    overflow-x: auto

    table
        width: auto !important

        th
            word-break: keep-all
