$family-sans-serif ?= BlinkMacSystemFont, -apple-system, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue", "Helvetica", "Arial", sans-serif
$family-monospace ?= Maple Mono NF CN, SF Pro, monospace;
$family-modern ?= 'Futura', Paris2024, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif

overflow-touch()
  -webkit-overflow-scrolling touch

unselectable()
  -webkit-touch-callout none
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none

$unselectable
  unselectable()

block()
  &:not(:last-child)
    margin-bottom .8rem

$block
  block()
