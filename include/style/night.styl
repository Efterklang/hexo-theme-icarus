#universe
    display: none

.navbar-logo,
.footer-logo
    .logo-img-dark
        display: none

night()
    // night icon changed to fas fa-lightbulb
    #night-nav #night-icon:before
        content: '\f0eb'

    // global background
    #universe
        display: block
        background: radial-gradient(1600px at 70% 120%, #1e1e2e 10%, #11111b 100%)
        position: fixed
        margin: 0
        padding: 0
        border: 0
        outline: 0
        left: 0
        top: 0
        width: 100%
        height: 100%
        pointer-events: none

    // logo display switching
    .navbar-logo,
    .footer-logo
        .logo-img
            display: none
        .logo-img-dark
            display: inline-block

html.night
    night()
