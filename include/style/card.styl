.card
    // 图片区域
    .card-image
        overflow: hidden;

        .image
            position: relative;
            overflow: hidden;

            // LQIP 低质量占位图
            .cover-lqip
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                object-fit: cover;
                z-index: 1;
                transition: opacity 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
                transform: scale(1.1);

            // 主图片
            .fill
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                object-fit: cover;
                z-index: 2;
                opacity: 0;
                transition: opacity 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);

                &.loaded
                    opacity: 1;

                    // 加载完成后隐藏 LQIP
                    & + .cover-lqip
                        display: none

    // 媒体元素
    .media + .media
        border: none;
        margin-top: 0;
        padding-top: 1rem;

    // 特殊效果
    &.is-hoverable
        transition: all 0.3s ease;
        border: 1px solid transparent;

        .card-image
            .image
                .fill, .cover-lqip
                    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);

        &:hover
            border-color: rgba(0, 0, 0, 0.1);

            .card-image .image
                .fill, .cover-lqip
                    filter: contrast(1.05) brightness(1.05);
                    transform: translateY(-3px) scale(1.05);

                .cover-lqip
                    transform: translateY(-3px) scale(1.15);

    // 响应式设计
    +mobile()
        margin: 0 0 1.5rem 0;

        .card-header,
        .card-content,
        .card-footer
            padding: 1rem;

// 卡片组
.card-group
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;

    .card
        flex: 1;
        min-width: 300px;
        margin-top: 0;


    +mobile()
        flex-direction: column;

        .card
            min-width: auto;
