.card {
    overflow: visible;
    border-radius: $card-radius;
    position: relative;
    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px);

    &:hover {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    // 间距设置
    & + .card, & + .column-right-shadow {
        margin-top: 1.5rem;
    }

    // 图片区域
    .card-image {
        overflow: hidden;
        border-radius: $card-radius
        position: relative;

        .image {
            position: relative;
            overflow: hidden;

            // LQIP 低质量占位图
            .cover-lqip {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                object-fit: cover;
                z-index: 1;
                transition: opacity 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
                transform: scale(1.1);
            }

            // 主图片
            .fill {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                object-fit: cover;
                z-index: 2;
                opacity: 0;
                transition: opacity 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);

                &.loaded {
                    opacity: 1;

                    // 加载完成后隐藏 LQIP
                    & + .cover-lqip {
                        display: none
                    }
                }
            }
        }
    }

    // 头部区域
    .card-header {
        padding: 1rem 1.25rem;

        .card-header-title {
            font-weight: 600;
            font-size: 1.1rem;
        }

        .card-header-icon {
            padding: 0.75rem;
        }
    }

    // 内容区域
    .card-content {
        padding: 1.25rem;
        border-radius: 0;

        &:last-child {
            border-radius: 0 0 $card-radius $card-radius;
        }

        .content {
            &:not(:last-child) {
                margin-bottom: 1rem;
            }
        }
    }

    // 底部区域
    .card-footer {
        border-radius: 0 0 $card-radius $card-radius;
        padding: 0.75rem 1.25rem;

        .card-footer-item {
            padding: 0.5rem;

            &:not(:last-child) {
                border-right: 1px solid;
            }
        }
    }

    // 媒体元素
    .media + .media {
        border: none;
        margin-top: 0;
        padding-top: 1rem;
    }

    // 特殊效果
    &.is-hoverable {
        cursor: pointer;
        transition: all 0.3s ease;
        border: 1px solid transparent;

        .card-image {
            overflow: hidden;

            .image {
                .fill, .cover-lqip {
                    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
                }
            }
        }

        &:hover {
            border-color: rgba(0, 0, 0, 0.1);

            .card-image .image {
                .fill, .cover-lqip {
                    filter: contrast(1.05) brightness(1.05);
                    transform: translateY(-3px) scale(1.05);
                }

                .cover-lqip {
                    transform: translateY(-3px) scale(1.15);
                }
            }
        }
    }

    // 响应式设计
    +mobile() {
        margin: 0 0 1.5rem 0;

        .card-header,
        .card-content,
        .card-footer {
            padding: 1rem;
        }
    }
}

// 动画定义
@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

// 卡片组
.card-group {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;

    .card {
        flex: 1;
        min-width: 300px;
        margin-top: 0;
    }

    +mobile() {
        flex-direction: column;

        .card {
            min-width: auto;
        }
    }
}

// 紧凑型卡片
.card.is-compact {
    .card-header,
    .card-content,
    .card-footer {
        padding: 0.75rem 1rem;
    }
}

// 无边框卡片
.card.is-borderless {
    border: none !important;
    box-shadow: none !important;
}
