/* ---------------------------------
 *          Archive Timeline
 * --------------------------------- */

.timeline
    margin-left: 1rem
    padding: 1rem 0 0 1.5rem

    .media
        position: relative

        &:before, &:last-child:after
            content: ''
            display: block
            position: absolute
            left: calc(-.375rem - 1.5rem - .25px)

        &:before
            width: .75rem
            height: .75rem
            top: calc(1rem + 1.5 * .85rem / 2 - .75rem / 2)
            border-radius: 50%

        &:first-child:before
            top: calc(1.5 * .85rem / 2 - .75rem / 2)

        &:last-child:after
            top: calc(1rem + 1.5 * .85rem / 2 + .75rem / 2)
            bottom: 0
