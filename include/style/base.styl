bulma-stylus-root = './bulma';
@import (((bulma-stylus-root + '/utilities/_all')));
@import (((bulma-stylus-root + '/base/_all')));
@import bulma-stylus-root + '/components/_all'
@import bulma-stylus-root + '/elements/_all'
@import bulma-stylus-root + '/form/_all'
@import (((bulma-stylus-root + '/grid/_all')));
@import (((bulma-stylus-root + '/layout/_all')));

$body-size ?= 14px;

@import '../../source/css/font/font.css';
$size-7 ?= 0.85rem;
$size-small ?= 0.75rem;
$code-font ?= Maple Mono CN, Maple Mono NF CN, monospace;
$family-sans-serif ?= system-ui, sans-serif
// gap 62px
$gap ?= 12px;
$desktop ?= 1088px;
$widescreen ?= 1280px;
$fullhd ?= 1472px;
$shadow ?= 0 4px 10px rgba(0, 0, 0, 0.05);
$title-weight ?= $weight-normal;
$control-height ?= 2.25em;
$button-padding-vertical ?= calc(0.375em - 1px);
$card-radius ?= 24px;
$card-media-margin ?= 0.75rem;
$card-shadow ?= $shadow, 0 0 1px rgba(0, 0, 0, 0.1);
$content-heading-weight ?= $weight-normal;
$logo-height ?= 1.75rem;

html {
    height: 100%;
    -webkit-text-size-adjust: 100%;
    -moz-text-size-adjust: 100%;
    -ms-text-size-adjust: 100%;
    text-size-adjust: 100%;
}

body {
    min-height: 100%;
    display: flex;
    flex-direction: column;
}

body > .section {
    flex-grow: 1;
}
