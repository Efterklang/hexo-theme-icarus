/* ---------------------------------
 *    Article Summary and Content
 * --------------------------------- */
$article-font-size ?= 1.1rem

article
    .title a
        background-repeat: no-repeat
        background-size: 0 100%
        transition: all .25s ease-in-out
    .title:hover a
        // override another !important
        background-size: 100% 100%

    &.media
        a
            color: inherit

        .image
            width: 64px
            height: 64px

            img
                object-fit: cover
                width: 100%
                height: 100%
                border-radius: 5px

        .title
            @extend .is-size-6
            margin-bottom: .25em

        .date, .categories
            @extend .is-size-7

        .categories
            @extend .is-uppercase

        .media-content
            .title
                margin: 0
                line-height: inherit

    &.article
        .article-meta
            overflow-x: auto
            margin-bottom: .5rem

        .article-more
            @extend .button.is-light

        .content
            word-wrap: break-word
            font-size: $article-font-size

            h1,h2,h3,h4,h5,h6
                font-family: paris2024,lxgw
                font-weight: bold

            pre
                font-size: .85em

            em
                font-family: 'Times New Roman', lxgw, Times, serif

            code
                font-family 'Maple Mono NF CN', 'Google Sans Mono', monospace;
                border-radius 6px;
                padding 1px 6px;

            blockquote
                position: relative
                padding: 1.5rem 2rem 1.5rem 3rem
                margin: 1.5rem 0
                border-left: 4px solid
                border-radius: 0 8px 8px 0
                font-family: 'Times New Roman', lxgw, Times, serif
                font-weight: bolder
                font-style: italic
                font-size: 1.05rem
                line-height: 1.6
                box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1)
                
                &:before
                    content: '"'
                    position: absolute
                    left: 0.5rem
                    top: 0.2rem
                    font-size: 3rem
                    font-weight: bold
                    opacity: 0.3
                    line-height: 1
                    font-family: serif
                
                &:after
                    content: '"'
                    position: absolute
                    right: 0.5rem
                    bottom: -0.5rem
                    font-size: 3rem
                    font-weight: bold
                    opacity: 0.3
                    line-height: 1
                    font-family: serif

                &.pullquote
                    float: right
                    max-width: 50%
                    font-size: 1.15rem
                    position: relative

                footer
                    font-style: normal
                    font-size: 0.9rem
                    margin-top: 1rem
                    opacity: 0.8
                    
                    strong + cite
                        margin-left: .5em
                        
                p:last-child
                    margin-bottom: 0

            table
                width: 100%;
                border-collapse: separate;
                border-spacing: 0;
                margin: 1.5rem 0;
                border-radius: 8px;
                overflow: hidden;
                box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
                
                th
                    font-weight: 600;
                    text-align: left;
                    padding: 12px 16px;
                    border-bottom: 2px solid;
                    position: relative;
                    
                    &:first-child
                        border-top-left-radius: 8px;
                    &:last-child
                        border-top-right-radius: 8px;
                        
                td
                    padding: 12px 16px;
                    border-bottom: 1px solid;
                    transition: background-color 0.2s ease;
                    
                tbody tr
                    &:last-child td
                        border-bottom: none;
                        
                        &:first-child
                            border-bottom-left-radius: 8px;
                        &:last-child
                            border-bottom-right-radius: 8px;
                            
                // 响应式设计
                @media (max-width: 768px)
                    font-size: 14px;
                    
                    th, td
                        padding: 8px 12px;

            .message.message-immersive
                border-radius: 0
                margin: 0 0 - $card-content-padding $card-content-padding 0 - $card-content-padding

                .message-body
                    border: none
        
        .article-tags
            display: flex
            flex-wrap: wrap

.rtl
    direction: rtl

    .level
        &, &.is-mobile
            .level-item:not(:last-child)
                margin-left: .75rem
                margin-right: 0

// Overflow table
.table-overflow
    overflow-x: auto

    table
        width: auto !important

        th
            word-break: keep-all

// Video container
.video-container
    position: relative
    padding-bottom: 56.25%
    padding-top: 25px
    height: 0

    iframe
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%

.article-licensing
    position: relative
    z-index: 0
    box-shadow: none
    border-radius: $radius
    overflow: hidden

    &:after
        position: absolute
        z-index: -1
        right: -50px
        top: -87.87px
        content: '\f25e'
        font-size: 200px
        font-family: 'Font Awesome 5 Brands'
        opacity: .1

    .level-left
        flex-wrap: wrap
        max-width: 100%

    .licensing-title
        @extend .mb-3
        line-height: 1.2

        p:not(:last-child)
            @extend .mb-1

        a
            @extend .is-size-7, .has-text-grey

    .licensing-meta
        .level-item
            @extend .mr-4

        .icons
            .icon
                @extend .ml-1
                width: 1.2em
                height: 1.2em
                font-size: 1.2em
                vertical-align: bottom

        h6
            @extend .is-size-7

        a
            color: inherit

a
    &.article-nav-prev
        span
            text-align: left
            flex-shrink: 1
            word-wrap: break-word
            white-space: normal

    &.article-nav-next
        span
            text-align: right
            flex-shrink: 1
            word-wrap: break-word
            white-space: normal
