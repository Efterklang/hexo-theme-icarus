/* ---------------------------------
 *    Article Summary and Content
 * --------------------------------- */
.article
    &:has(.article-licensing)
        padding-bottom: 0

.article-meta
    font-size: .8rem
    overflow-x: auto
    margin-bottom: .1rem !important
    span
        padding-right: .5rem

.article-licensing
    display block
    position: relative
    width: calc(100% + 2.5rem)
    margin-left: -1.25rem
    margin-right: -1.25rem
    padding: 1.25rem
    z-index: 0
    border-radius: 0 0 $card-radius $card-radius
    // border-radius: $card-radius
    box-shadow: none
    overflow: hidden

    .level-left
        flex-wrap: wrap
        max-width: 100%

.article-licensing-bg-icon
    position: absolute
    z-index: -1
    right: -50px
    top: -88px
    font-size: 200px
    opacity: .1
    pointer-events: none

.licensing-title
    @extend .mb-3
    line-height: 1.2

    p:not(:last-child)
        @extend .mb-1

    a
        @extend .is-size-7

.licensing-meta
    .level-item
        @extend .mr-4
        @extend .is-size-7

    iconify-icon
        font-size: 1.5em
        vertical-align: bottom

    a
        color: inherit
