.floating-toc-container
    position: fixed
    top: 100px
    right: 30px
    z-index: 100

.floating-toc-button
    width: 40px
    height: 40px
    border-radius: 45%
    display: flex
    justify-content: center
    align-items: center
    cursor: pointer
    opacity: 0.5
    transition: opacity 0.3s ease

.floating-toc-button:hover
    opacity: 1

.floating-toc-container .widget
    position: absolute
    top: -10px
    right: 45px
    width: 320px !important
    min-width: 300px !important
    max-height: 70vh
    overflow-y: auto
    opacity: 0
    visibility: hidden
    transition: opacity 0.2s ease, visibility 0.2s ease, transform 0.2s cubic-bezier(0.4,0,0.2,1)
    border-radius: $card-radius

.floating-toc-container:hover .widget
    opacity: 1
    visibility: visible
    transform: translateY(0)

.floating-toc-container .widget
    .menu-list-item.menu-list-level-2
        margin-left: 1em

    .menu-list-item.menu-list-level-3
        margin-left: 2em

    .menu-list-item.menu-list-level-4
        margin-left: 3em
