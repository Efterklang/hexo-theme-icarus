screen-tablet = 769px;
screen-desktop = 1088px;
screen-widescreen = 1280px;
screen-fullhd = 1472px;
screen-onek = 1700px;

@media screen and (min-width screen-onek)
    .container
        max-width 1600px;
        width 1600px;

@media screen and (min-width screen-tablet)
    .column-main, .column-left, .column-right, .column-right-shadow
        &.is-sticky
            top 70px;

// Section fixes
.section .container .columns
    -webkit-justify-content center;
    justify-content center;

.heimu
    color var(--text);
    background-color var(--text);
    &:hover
        color var(--base);

.poem
    font-family 'outi', 'KaiTi';
    font-style bold;
    font-size 30px;
    text-align center;
    background-color rgba(210, 180, 140, 0.05);
    border 3px solid rgba(0, 0, 0, 0.1); /* 更改边框颜色和透明度 */
    padding 20px;
    margin 10px;
    width auto;
    border-radius 10px;
    box-shadow 0 4px 8px rgba(0, 0, 0, 0.2);
    transition-duration 0.5s;

    &:hover
        background-color rgba(210, 180, 140, 0.1);
        box-shadow 0 8px 16px rgba(0, 0, 0, 0.3);
        transform translateY(-2px);
